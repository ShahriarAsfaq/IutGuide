<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Project"
    android:orientation="vertical"
    android:layout_margin="30dp">

    <EditText
        android:id="@+id/projectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Project Name"
        android:textSize="20dp">
    </EditText>

    <EditText
        android:id="@+id/student1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Student 1 ID"
        android:textSize="20dp"
        android:layout_marginTop="10dp">
    </EditText>

    <EditText
        android:id="@+id/student2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Student 2 ID"
        android:textSize="20dp"
        android:layout_marginTop="10dp">
    </EditText>

    <EditText
        android:id="@+id/student3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Student 3 ID"
        android:textSize="20dp"
        android:layout_marginTop="10dp">
    </EditText>

    <Button
        android:id="@+id/addprojectbutton"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD PROJECT"
        android:textSize="20dp"
        />





</LinearLayout>